<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal"
    android:id="@id/pop_root_layout"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/tool_bar_margin"
        android:layout_marginStart="@dimen/tool_bar_margin"
        >
        <LinearLayout
            android:id="@+id/linear_dot_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        <ImageView
            android:id="@+id/iv_white_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_dot_white"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tool_bar_text_size"
        tools:text="ChangSha"
        android:textColor="@color/colorWhite"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/iv_add_city"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_add_white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/tool_bar_margin"
        android:layout_marginEnd="@dimen/tool_bar_margin"
        />
</RelativeLayout>